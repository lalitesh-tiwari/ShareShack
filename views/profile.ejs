<%- include("./partials/header")%>
<!--  -->
<%- include("./partials/nav")%>
<div
  class="wrapper h-[80vh] w-[100%] flex justify-center items-center gap-[4vmax] p-[4vmax] flex-wrap shrink-0 overflow-auto"
>
  <% posts.forEach((post)=>{ %>
  <div class="card w-[25%] h-[100%] border border-gray-600 rounded-lg">
    <div
      class="top w-[100%] h-[14%] pl-[0.5vmax] flex items-center justify-between"
    >
      <div class="left w-[20%] h-[100%] rounded-[50%] pt-[0.2vmax]">
        <img
          src="/images/<%= post.user.profiledp %>"
          class="w-[95%] h-[100%] object-cover rounded-[50%] border border-white/40"
        />
      </div>
      <div
        class="right w-[78%] h-[100%] flex flex-col items-start justify-evenly pl-[0.5vmax]"
      >
        <p class="text-[1.2vmax]">@<%=post.user.username%></p>
        <p class="text-[0.8vmax] text-gray-300">
          <%=post.createdAt.toLocaleTimeString()%> |
          <%=post.createdAt.toLocaleDateString()%>
        </p>
      </div>
    </div>
    <div class="caption w-[100%] h-[6%] pl-[0.5vmax] flex items-center">
      <p class="text-[0.8vmax] text-gray-300"><%=post.caption%></p>
    </div>
    <div class="media w-[100%] h-[70%]">
      <img
        src="/images/<%=post.media%>"
        class="w-[100%] h-[100%] object-cover"
      />
    </div>
    <div
      class="bottom w-[100%] h-[10%] flex items-center gap-[1vmax] pl-[1vmax]"
    >
      <span class="text-[1.2vmax]"> <%= post.likes.length %> </span>
      <a href="/like/<%=post._id%>" class="text-[1.7vmax]">
        <% if(post.likes.includes(user._id)) { %>
        <i class="text-blue-400 ri-thumb-up-fill"></i>
        <% } else { %>
        <i class="ri-thumb-up-line"></i>
        <% } %>
      </a>
      <span class="text-[1.2vmax]"> <%= post.unlikes.length %> </span>
      <a href="/unlike/<%=post._id%>" class="text-[1.7vmax]">
        <% if(post.unlikes.includes(user._id)) { %>
        <i class="text-blue-400 ri-thumb-down-fill"></i>
        <% } else { %>
        <i class="ri-thumb-down-line"></i>
        <% } %>
      </a>
    </div>
  </div>
  <% }) %>
</div>
<div class="bottomnav w-[100%] h-[9.9vh] flex items-center justify-center">
  <div
    class="w-[25%] h-[100%] flex items-center justify-evenly border border-gray-500 rounded-lg"
  >
    <div class="one w-[33%] h-[100%] flex items-center justify-center">
      <a href="/" class="text-[2.4vmax] hover:text-blue-400"
        ><i class="ri-home-4-fill"></i
      ></a>
    </div>
    <div
      class="two w-[33%] h-[100%] border-x border-gray-500 flex items-center justify-center"
    >
      <a href="/create-post" class="text-[2.5vmax] hover:text-blue-400"
        ><i class="ri-add-circle-fill"></i
      ></a>
    </div>
    <div class="three w-[33%] h-[100%] flex items-center justify-center">
      <a href="/profile-update/<%=user._id%>">
        <div class="w-[3vw] h-[6vh] rounded-[50%] border border-gray-400">
          <img
            src="/images/<%=user.profiledp%>"
            class="w-[100%] h-[100%] object-cover rounded-[50%]"
          />
        </div>
      </a>
    </div>
  </div>
</div>
<!--  -->
<%- include("./partials/footer")%>
